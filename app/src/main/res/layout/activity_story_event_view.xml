<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menus.MainMenu"
    android:background="@color/dark_green">

    <TextView
        android:id="@+id/btnPause_storyEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ic_pause" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/btnPause_storyEvent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imvVisualBackground_storyEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:maxWidth="600dp"
                android:maxHeight="240dp"
                android:scaleType="fitCenter"
                android:src="@drawable/placeholder_visual" />

            <ImageView
                android:id="@+id/imvVisualLayer1_storyEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:maxWidth="600dp"
                android:maxHeight="240dp"
                android:scaleType="fitCenter"
                android:src="@drawable/placeholder_visual" />

            <ImageView
                android:id="@+id/imvVisualLayer2_storyEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:maxWidth="600dp"
                android:maxHeight="240dp"
                android:scaleType="fitCenter"
                android:src="@drawable/placeholder_visual" />

            <ImageView
                android:id="@+id/imvVisualLayer3_storyEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:maxWidth="600dp"
                android:maxHeight="240dp"
                android:scaleType="fitCenter"
                android:src="@drawable/placeholder_visual" />

        </RelativeLayout>

        <com.example.project2_rev1.utils.TypeWriter
            android:id="@+id/txtStoryText_storyEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="sans-serif-black"
            android:text="story"
            android:textAlignment="center"
            android:textColor="@color/light_brown"
            android:textSize="25dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/touchListener_storyEvent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnPause_storyEvent" />

    <TextView
        android:id="@+id/animRect_storyEvent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:visibility="invisible" />

</RelativeLayout>